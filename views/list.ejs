<!DOCTYPE html>
<html>
<head>
    <title>Todo List</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <header>
        <h1 id="heading">Todo List</h1>
    </header>

    <div class="box">
        <form action="/" method="GET">
            <label>Filter by priority:</label>
            <select name="priority" onchange="this.form.submit()">
                <option>All</option>
                <option>High</option>
                <option>Medium</option>
                <option>Low</option>
            </select>
        </form>

        <% if (ejes.length === 0) { %>
            <p>No tasks available.</p>
        <% } %>

        <% for(let i = 0; i < ejes.length; i++) { %>
            <div class="item">
                <form action="/delete" method="POST">
                    <input type="hidden" name="index" value="<%= i %>">
                    <button type="submit">üóëÔ∏è</button>
                </form>

                <form action="/edit" method="POST">
                    <input type="text" name="edited" value="<%= ejes[i].task %>" required>
                    <input type="hidden" name="index" value="<%= i %>">
                    <button type="submit">‚úèÔ∏è</button>
                </form>

                <span class="priority <%= ejes[i].priority.toLowerCase() %>"><%= ejes[i].priority %></span>
            </div>
        <% } %>

        <form action="/" method="POST" id="todoForm">
            <input type="text" name="ele1" placeholder="Enter the task">
            <select name="priority">
                <option value="Low">Low</option>
                <option value="Medium">Medium</option>
                <option value="High">High</option>
            </select>
            <button type="submit">+</button>
        </form>
    </div>

    <footer>
        <p>&copy; 2025 Your Name</p>
    </footer>

    <script>
        document.getElementById("todoForm").addEventListener("submit", function(e) {
            const input = document.querySelector("input[name='ele1']");
            if (input.value.trim() === "") {
                alert("Please enter a task!");
                e.preventDefault();
            }
        });
    </script>
</body>
</html>